<% if logged_in? %>
  <h3><%= @user.name %></h3>
  <%= render "tasks/form", task: @task %>
  <div class = "row">
  <div class = "col-xs-8">
  <h4>タスク一覧</h4>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
         <th>タスク</th>
      </tr>
    </thead>
    
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task %></td>
        <td><%= task.status %></td>
        <td><%= task.content %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  </div>
  </div>

<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>

<% end %>