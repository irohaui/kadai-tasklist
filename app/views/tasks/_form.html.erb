<%= form_for(task) do |f| %>

  <% if task.errors.any? %>
    <div id = "error_explanation">
      <% task.errors.full_messages.each do |task| %>
        <ul>
          <li><%= task %></li>
        </ul>
      <% end %> 
    </div>
  <% end %>
  
  <%= f.label :status, "ステータス" %>
  <%= f.text_field :status %>
  
  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>
  
  <%= f.submit "登録" %>
<% end %>